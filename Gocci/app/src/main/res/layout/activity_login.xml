<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inase.android.gocci.Activity.LoginActivity">

    <ImageView
        android:id="@+id/background_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/enjoy_eat"
        android:background="@drawable/ic_background_login" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_gocci_white" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progress_wheel"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|bottom"
        android:src="@drawable/ic_gocci_moji_white50" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/progress_size"
        android:layout_height="@dimen/progress_size"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="invisible"
        wheel:matProg_barColor="@color/gocci_header"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/enjoy_eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/introduce"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="16dp"
        android:text="@string/enjoy_eat"
        android:textColor="@color/namegrey"
        android:textSize="@dimen/large_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username_Ripple"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="2dp"
        android:text="@string/introduce"
        android:textColor="@color/nameblack"
        android:textSize="@dimen/normal_text" />

    <com.andexert.library.RippleView
        android:id="@+id/username_Ripple"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/login_session"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/gocci_button"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gocciを始める"
            android:textColor="#ffffff"
            android:textSize="@dimen/accent_text" />
    </com.andexert.library.RippleView>

    <TextView
        android:id="@+id/login_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="すでにアカウントをお持ちの方はこちら"
        android:textColor="@color/nameblack"
        android:textSize="12sp" />

</RelativeLayout>
