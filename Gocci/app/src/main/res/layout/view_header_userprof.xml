<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/materialwhite">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></RelativeLayout>

    <ImageView
        android:id="@+id/userprof_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/viewFotter"
        android:background="@color/materialwhite" />

    <TextView
        android:id="@+id/userprof_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userprof_picture"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/userprof_picture"
        android:singleLine="true"
        android:text="@string/username"
        android:textColor="@color/namegrey"
        android:textSize="@dimen/large_text"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.andexert.library.RippleView
        android:id="@+id/userprof_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_follow"
        android:layout_below="@+id/numBar"
        android:layout_marginTop="4dp"
        android:layout_alignRight="@+id/numBar"
        android:layout_marginRight="72dp">

        <TextView
            android:id="@+id/followText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp"
            android:text="@string/do_follow"
            android:textColor="#ffffff"
            android:textSize="@dimen/normal_text" />
    </com.andexert.library.RippleView>

    <ImageView
        android:id="@+id/userprof_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:src="@drawable/ic_userpicture"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:id="@+id/numBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/userprof_picture"
        android:layout_alignTop="@+id/userprof_picture">

        <com.andexert.library.RippleView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/followRipple"
            ripple:rv_color="@android:color/black"
            ripple:rv_centered="true"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/follow_num"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:singleLine="false"
                android:text="@string/follow_list"
                android:textColor="@color/namegrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/follow_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                android:text="20"
                android:textColor="@color/namegrey"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/followerRipple"
            ripple:rv_color="@android:color/black"
            ripple:rv_centered="true"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/follower_num"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:text="@string/follower_list"
                android:textColor="@color/namegrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/follower_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                android:text="50"
                android:textColor="@color/namegrey"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/usercheerRipple"
            ripple:rv_color="@android:color/black"
            ripple:rv_centered="true"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usercheer_num"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:text="@string/cheer_list"
                android:textColor="@color/namegrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/usercheer_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                android:text="5"
                android:textColor="@color/namegrey"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.andexert.library.RippleView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/userprof_picture"
        android:id="@+id/viewFotter"
        android:layout_gravity="bottom"
        android:background="#c5c6c9" />

</RelativeLayout>