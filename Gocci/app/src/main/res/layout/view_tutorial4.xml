<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/welcome_fragment"
    android:background="#FFE066">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_gocci_cheer"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="それでは、"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_1"
        android:layout_below="@+id/image_8"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gocciへようこそ！"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/text_2"
        android:layout_below="@+id/text_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <com.inase.android.gocci.Base.BlockEditTextDefaultFocusFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usernameFrame"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_below="@+id/text_2"
        android:layout_marginTop="16dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/usernameTextInput"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:focusableInTouchMode="true">

            <EditText
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/please"
                android:focusableInTouchMode="true" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createdUsername"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textStyle="bold" />
    </com.inase.android.gocci.Base.BlockEditTextDefaultFocusFrameLayout>

    <com.github.jorgecastilloprz.FABProgressCircle
        android:id="@+id/fabProgressCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/usernameFrame"
        android:layout_alignRight="@+id/usernameFrame">

        <!-- You can change it with the fab from the library you want to use -->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            app:borderWidth="0dp"
            app:elevation="4dp" />

    </com.github.jorgecastilloprz.FABProgressCircle>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fabProgressCircle"
        android:id="@+id/rules">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登録することで、"
            android:id="@+id/rule_header"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:textColor="@color/nameblack" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rule_content"
            android:layout_below="@+id/rule_header"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="利用規約"
                android:id="@+id/rule"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/nameblack"
                android:layout_toLeftOf="@+id/rule_center"
                android:layout_below="@+id/rule_header" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="及び"
                android:id="@+id/rule_center"
                android:textSize="14sp"
                android:textColor="@color/nameblack"
                android:layout_below="@+id/rule_header"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="プライバシーポリシー"
                android:id="@+id/policy"
                android:textColor="@color/nameblack"
                android:textSize="14sp"
                android:layout_below="@+id/rule_header"
                android:layout_toRightOf="@+id/rule_center"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="に同意するものとします。"
            android:id="@+id/rule_footer"
            android:textSize="12sp"
            android:textColor="@color/nameblack"
            android:layout_below="@+id/rule_content"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>