<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.inase.android.gocci.ui.view.BlockEditTextDefaultFocusLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/view_background"
        android:orientation="vertical">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/restname_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:hint="@string/restname_strong"
            android:textColor="@color/timecolor"
            android:textSize="@dimen/small_text"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextSize="10sp" />

        <TextView
            android:id="@+id/add_rest_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:text="店舗が無い場合はこちら"
            android:textColor="@color/nameblack"
            android:textSize="@dimen/small_text" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="@string/category"
            android:textColor="@color/timecolor"
            android:textSize="@dimen/small_text"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextSize="10sp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:hint="@string/value_strong"
            android:inputType="number"
            android:textColor="@color/timecolor"
            android:textSize="@dimen/small_text"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextSize="10sp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:hint="@string/comment"
            android:inputType="textShortMessage"
            android:textColor="@color/timecolor"
            android:textSize="@dimen/small_text"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/check_cheer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="false"
                android:layout_marginRight="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_centerVertical="true"
                android:text="@string/add_cheer_text"
                android:textColor="@color/nameblack"
                android:layout_marginLeft="16dp"
                android:textSize="@dimen/small_text"
                android:layout_toRightOf="@+id/image_cheer" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_cheer"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cheer" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/image_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_preview_twitter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/image_twitter"
                android:text="@string/setting_socialnetwork_twitter"
                android:textColor="@color/namegrey"
                android:textSize="@dimen/small_text" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/button_twitter"
                android:background="@drawable/ic_navigate_next_grey600_24dp"
                android:layout_marginRight="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/image_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_preview_facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/image_facebook"
                android:text="@string/setting_socialnetwork_facebook"
                android:textColor="@color/namegrey"
                android:textSize="@dimen/small_text" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/button_facebook"
                android:background="@drawable/ic_navigate_next_grey600_24dp"
                android:layout_marginRight="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/image_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_preview_instagram" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/image_instagram"
                android:text="@string/setting_socialnetwork_instagram"
                android:textColor="@color/namegrey"
                android:textSize="@dimen/small_text" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/button_instagram"
                android:background="@drawable/ic_navigate_next_grey600_24dp"
                android:layout_marginRight="8dp" />
        </RelativeLayout>

        <com.andexert.library.RippleView
            android:id="@+id/toukou_button_ripple"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/gocci_button"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/do_post"
                android:textColor="#ffffff"
                android:textSize="@dimen/accent_text" />

        </com.andexert.library.RippleView>

    </com.inase.android.gocci.ui.view.BlockEditTextDefaultFocusLinearLayout>
</ScrollView>