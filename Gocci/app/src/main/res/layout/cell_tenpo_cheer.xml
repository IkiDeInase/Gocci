<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="@dimen/userpicture_size"
        android:layout_height="@dimen/userpicture_size"
        android:id="@+id/tenpo_cheer_picture"
        android:src="@drawable/ic_userpicture"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/user_name"
        android:textStyle="bold"
        android:textSize="@dimen/accent_text"
        android:singleLine="true"
        android:textColor="@color/namegrey"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tenpo_cheer_picture" />

    <com.andexert.library.RippleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account_button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_follow_button"
            android:src="@drawable/ic_favorite_outline_grey_600_24dp"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_follow_button"
            android:src="@drawable/ic_favorite_white_24dp"
            android:visibility="invisible" />
    </com.andexert.library.RippleView>

</RelativeLayout>