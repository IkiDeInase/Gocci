<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.squareup.timessquare.CalendarPickerView
        android:id="@+id/calendar_view"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_background"
        android:scrollbarStyle="outsideOverlay"
        android:clipToPadding="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        app:tsquare_dayBackground="@drawable/custom_calendar_bg_selector"
        app:tsquare_dividerColor="@color/namegrey"
        app:tsquare_titleTextColor="@color/gocci_header"
        app:tsquare_headerTextColor="@color/nameblack"
        app:tsquare_dayTextColor="@drawable/custom_calendar_text_selector"
        />

</RelativeLayout>