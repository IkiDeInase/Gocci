<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kinagafuji.gocci.Activity.IntentVineCamera">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確認"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <VideoView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/video"
            android:layout_weight="1"
            android:layout_marginLeft="8dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/facebookShare"
                android:background="@drawable/ic_facebook_share"
                android:layout_margin="4dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twitterShare"
                android:background="@drawable/ic_twitter_share"
                android:layout_margin="4dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentText"
            android:hint="コメント"
            android:textSize="14sp"
            android:layout_margin="16dp"
            android:padding="8dp" />

    </LinearLayout>

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/toukoushare"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_toukou_share" />

</LinearLayout>
