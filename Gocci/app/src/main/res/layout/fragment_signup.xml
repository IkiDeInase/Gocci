<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="450dp"

    android:background="#ffeef1ff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/closeButton"
            android:background="@drawable/com_facebook_tooltip_black_xout"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="サインアップ"
            android:id="@+id/textView"

            android:layout_marginTop="32dp"
            android:textSize="28sp"
            android:layout_marginLeft="48dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNSでサインイン"
        android:id="@+id/textView2"

        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="108dp" />

    <ImageButton
        android:id="@+id/facebookButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_facebookkirinuki" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/twitterButton"

        android:layout_marginTop="8dp"
        android:background="@drawable/ic_twitterkirinuki"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="メールアドレスでサインイン"
        android:id="@+id/textView3"

        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="68dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText2"

        android:hint="メールアドレス"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText3"

        android:layout_marginTop="4dp"
        android:hint="パスワード"
        android:layout_marginLeft="30dp" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/accountButton"

        android:layout_marginTop="16dp"
        android:background="@drawable/powered_by_google_light"
        android:layout_marginLeft="30dp" />

</LinearLayout>