<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:gravity="left|center_vertical" android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:background="@color/window_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closeButton"
            android:background="@drawable/ic_batu"
            android:layout_marginRight="140dp"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="サインイン"
            android:id="@+id/textView"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SNSでサインイン"
            android:id="@+id/textView2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <ImageButton
            android:id="@+id/facebookButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_facebook_signin" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/twitterButton"
            android:layout_below="@+id/facebookButton"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_twitter_signin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="メールアドレスでサインイン"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText2"

            android:hint="メールアドレス"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_marginTop="4dp"
            android:hint="パスワード"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/accountButton"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_account_signin" />

    </LinearLayout>
</LinearLayout>