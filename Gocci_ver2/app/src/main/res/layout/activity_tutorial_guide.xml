<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inase.android.gocci.Activity.TutorialGuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp">

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/circles"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            style="@style/CustomCirclePageIndicator"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <com.andexert.library.RippleView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/tutorial_finish"
            ripple:rv_color="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gocciを始める"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/nameblack" />

        </com.andexert.library.RippleView>


    </LinearLayout>


</RelativeLayout>
