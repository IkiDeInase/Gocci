<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店舗追加画面"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="#64b5f6" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="あなたのお気に入りのお店を"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gocciに追加しましょう"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="※食べログURLもあれば記入して下さい※"
        android:alpha="0.8"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:textColor="@color/gocci_header" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/restnameEdit"
        android:hint="レストラン名"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/localityEdit"
        android:hint="住所"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/tabelogUrlEdit"
        android:hint="食べログURL"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="送信する"
        android:id="@+id/sendButton"
        android:background="@color/gocci_header"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />
</LinearLayout>