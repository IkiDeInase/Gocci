<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="アカウントを作成"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/nameblack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gocci は楽しい動画アプリですので"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/small_text"
        android:layout_marginTop="8dp"
        android:textColor="@color/nameblack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登録するといいですよ"
        android:textSize="@dimen/small_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:textColor="@color/nameblack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNS でアカウント作成"
        android:textSize="@dimen/normal_text"
        android:textColor="@color/nameblack"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <com.andexert.library.RippleView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/twitter_background"
        android:gravity="center"
        android:id="@+id/account_twitter_Ripple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="twitter でアカウント作成"
            android:textColor="#ffffff"
            android:alpha="0.9"
            android:textSize="@dimen/accent_text" />

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/account_facebook_Ripple"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/facebook_background"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="facebook でアカウント作成"
            android:textColor="#ffffff"
            android:alpha="0.9"
            android:textSize="@dimen/accent_text" />

    </com.andexert.library.RippleView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="メールアドレスでアカウント作成"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/nameblack"
        android:textSize="@dimen/normal_text"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usernameEdit"
        android:layout_gravity="center_horizontal"
        android:background="#f5f5f5"
        android:padding="8dp"
        android:hint="@string/username"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/normal_text"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/timecolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/list_shadow" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailEdit"
        android:layout_gravity="center_horizontal"
        android:background="#f5f5f5"
        android:hint="@string/email"
        android:padding="8dp"
        android:textSize="@dimen/normal_text"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/timecolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/list_shadow" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passEdit"
        android:layout_gravity="center_horizontal"
        android:background="#f5f5f5"
        android:padding="8dp"
        android:hint="@string/password"
        android:textSize="@dimen/normal_text"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/timecolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/list_shadow" />

    <com.andexert.library.RippleView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/gocci_header"
        android:gravity="center"
        android:id="@+id/account_login_Ripple"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="アカウントを作成する"
            android:textSize="@dimen/accent_text"
            android:alpha="0.9"
            android:textColor="#ffffff" />

    </com.andexert.library.RippleView>

</LinearLayout>
</ScrollView>