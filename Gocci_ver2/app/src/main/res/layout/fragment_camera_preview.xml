<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="確認"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="24dp"
            android:textColor="@color/nameblack" />

        <com.inase.android.gocci.Base.SquareVideoView
            android:id="@+id/previewVideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="16dp" />

        <com.andexert.library.RippleView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/share_twitter_Ripple"
            android:gravity="center"
            android:background="@color/twitter_background"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="twitter でシェア"
                android:textColor="#ffffff"
                android:alpha="0.9"
                android:textSize="16sp" />

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:background="@color/facebook_background"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/share_facebook_Ripple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="facebook でシェア"
                android:textColor="#ffffff"
                android:alpha="0.9"
                android:textSize="16sp" />

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:id="@+id/toukou_button_Ripple"
            android:background="@color/gocci_button"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投稿する"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:alpha="0.9" />

        </com.andexert.library.RippleView>


    </LinearLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/cameraprogress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        wheel:matProg_barColor="@color/gocci_header"
        wheel:matProg_progressIndeterminate="true"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>