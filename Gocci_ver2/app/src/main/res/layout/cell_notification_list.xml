<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/circleImage"
        android:src="@drawable/ic_userpicture"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notice"
        android:id="@+id/notice"
        android:layout_alignTop="@+id/circleImage"
        android:layout_toRightOf="@+id/circleImage"
        android:layout_toEndOf="@+id/circleImage"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/namegrey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date_time"
        android:id="@+id/date_time"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/circleImage"
        android:layout_toEndOf="@+id/circleImage"
        android:textSize="10dp"
        android:layout_below="@+id/notice"
        android:layout_marginTop="2dp"
        android:textColor="@color/nameblack" />

</RelativeLayout>