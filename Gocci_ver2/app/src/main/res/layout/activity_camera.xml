<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/solid_black"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/top_mask"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/capture_top_mask">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_gocci_white" />

            <LinearLayout
                android:id="@+id/cancel"
                android:layout_width="56.0dip"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:onClick="onBackPressed">

                <Button
                    android:layout_width="32.0dip"
                    android:layout_height="32.0dip"
                    android:background="@drawable/btn_capture_x"
                    android:onClick="onBackPressed" />
            </LinearLayout>

        </RelativeLayout>

        <com.inase.android.gocci.View.MySurfaceView
            android:id="@+id/cameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_mask"
            android:layout_centerInParent="true"
            android:layout_marginBottom="175dp" />

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bottom_mask"
            android:layout_width="fill_parent"
            android:layout_height="175.0dip"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/capture_background">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                />

            <com.ogaclejapan.smarttablayout.SmartTabLayout
                android:id="@+id/viewpagertab"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_gravity="bottom|center_horizontal"
                app:stl_indicatorInterpolation="linear"
                app:stl_indicatorColor="@color/view_background"
                app:stl_indicatorThickness="8dp"
                app:stl_indicatorCornerRadius="4dp"
                app:stl_underlineThickness="0dp"
                app:stl_underlineColor="@color/transparent"
                app:stl_dividerThickness="0dp"
                app:stl_dividerColor="@color/transparent"
                app:stl_customTabTextLayoutId="@layout/custom_tab_circle"
                android:layout_marginBottom="12dp" />

        </LinearLayout>
    </RelativeLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/cameraprogress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        wheel:matProg_barColor="@color/gocci_header"
        wheel:matProg_progressIndeterminate="true"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>