<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:apiKey="@string/map_key" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="125dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:paddingTop="16dp"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TenpoName"
            android:id="@+id/tenpo_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/namegrey"
            android:maxLength="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:id="@+id/tenpo_category"
            android:textSize="10sp"
            android:textColor="@color/nameblack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locality"
            android:id="@+id/tenpo_locality"
            android:layout_marginTop="4dp"
            android:textColor="@color/nameblack"
            android:maxLength="30" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.andexert.library.RippleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tenpo_homepage"
                android:background="@drawable/button_follow"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_homepage"
                        android:layout_marginLeft="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ホームページを見る"
                        android:textColor="#ffffff"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="6dp" />

                </LinearLayout>

            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tenpo_call"
                android:background="@drawable/button_follow"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_call"
                        android:layout_marginLeft="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="080-3903-3005"
                        android:textColor="#ffffff"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="6dp"
                        android:id="@+id/tenpo_phonenumber" />

                </LinearLayout>

            </com.andexert.library.RippleView>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c5c6c9"
        android:layout_gravity="bottom" />
</FrameLayout>